@model PostsViewModel
<style>
    .resimboyutlandir{
        width:100rem;
        height:30rem;
    }
</style>
<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">Pop√ºler Postlar</h1>
            @foreach (var post in Model.Posts)
            {
                <div class="card bg-transparent border-0 mb-3">
                    <div class="row">
                        <div class="d-flex">
                            <div class="col-4 ">
                                <img src="/lib/bootstrap/img/@post.Image" class="img-fluid rounded resimboyutlandir" alt="">
                            </div>
                            <div class="col-8">
                                <h5><a href="/posts/details/@post.Url" class="btn-link fw-bold">@post.Title</a></h5>
                                <p>@post.Content</p>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-3">
            }
            <nav>
                <ul class="pagination">
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item"><a href="#" class="page-link">3</a></li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="col-lg-4">
        <vc:tags-menu></vc:tags-menu><br>
        <vc:new-posts></vc:new-posts>
    </div>
</div>